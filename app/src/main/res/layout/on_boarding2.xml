<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layoutAnimation="@transition/anim_setting_left">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="426dp"
        android:layout_height="478dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/illustration" />


    <Button
        android:id="@+id/signinbut"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white_dark"
        android:text="Sign In"
        android:textSize="16dp"

        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/signupbut"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Sign Up"
        android:textSize="16dp"
        android:backgroundTint="@color/white_dark"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />




    <ImageButton
        android:id="@+id/isecondpage_withoutinter_but"
        android:layout_width="17dp"
        android:layout_height="21dp"
        android:layout_marginStart="15dp"

        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signupbut"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/signinbut"
        app:srcCompat="@drawable/oval_white"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/firstpage"
        android:layout_width="17dp"
        android:layout_height="21dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/isecondpage_withoutinter_but"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="220dp"
        android:layout_height="181dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/rectonboard" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="4dp"
        android:rotation="-25"
        android:text="Welcome To WSR Food"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>